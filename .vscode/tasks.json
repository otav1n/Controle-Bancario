{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Compilar e Executar C",
        "type": "shell",
        "command": "gcc",
        "args": [
          "-g",
          "${workspaceFolder}/**/*.c",
          "-o",
          "${workspaceFolder}/output/bc_1.0"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": [
          "$gcc"
        ],
        "detail": "Tarefa gerada pelo usu√°rio."
      },
      {
        "label": "Executar Programa",
        "type": "shell",
        "command": "${workspaceFolder}/output/bc_1.0",
        "group": {
          "kind": "test",
          "isDefault": true
        },
        "presentation": {
          "echo": true,
          "reveal": "always",
          "focus": false,
          "panel": "shared"
        }
      }
    ]
  }